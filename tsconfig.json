{
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "jsx": "react-native",
        "outDir": "build",
        "rootDir": "src",
        "sourceMap": false,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "lib": ["ES2015", "dom"]
    },
    "include": [
        "typings/**/*.d.ts",
        "src/**/*"
    ],
    "exclude": [
    ]
}
